{
    "manifest_version": 3,
    "name": "My Rekhta Citation Extension",
    "description": "Generates citations for Rekhta book pages",
    "version": "1.0.0",

    "content_scripts": [
        {
            "matches": ["https://www.rekhta.org/ebooks/detail/*"],
            "js": ["content.js"]
        }
    ],

    "permissions": [
        "activeTab",
        "tabs",
        "clipboardWrite" 
    ],

    "action": { 
        "default_popup": "popup.html" 
    } 
}
